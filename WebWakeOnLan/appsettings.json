{
  "Logging": {
    "File": {
      "BasePath": "Logs",
      //"FileAccessMode": "KeepOpenAndAutoFlush",
      "FileEncodingName": "utf-8",
      "DateFormat": "yyyy-MM-dd",
      "CounterFormat": "000",
      "MaxFileSize": 10485760,
      "TextBuilderType": "WebWakeOnLan.LogBuilder, WebWakeOnLan",
      "LogLevel": {
        "WebWakeOnLan": "Information",
        "Default": "Error"
      },
      "IncludeScopes": true,
      "MaxQueueSize": 100,
      "Files": [
        {
          "Path": "error.log",
          "MinLevel": {
            "Default": "Error"
          }
        },
        {
          "Path": "<date:yyyy>/<date:MM>/<date:dd>/info-<counter>.log"
        }
      ]
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Debug"
    }
  },
  "AllowedHosts": "*"
}
